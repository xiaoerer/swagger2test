<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--spring的全局配置文件，用来控制spring特性的-->
    <!--http://www.cnblogs.com/parryyang/p/5783399.html-->

    <!--使用本文件时，需要在web.xml中添加listener，也就是ContextLoaderListener-->

    <context:component-scan base-package="com.jun.controller"/>
    <context:component-scan base-package="com.jun.base"/>
    <context:component-scan base-package="com.jun.api"/>

</beans>